---
# Domínio e subdomínio da aplicação
domain: "example.com"
subdomain: "app"
full_domain: "{{ subdomain }}.{{ domain }}"

# Email usado pelo Certbot/Let's Encrypt
certbot_email: "admin@example.com"

# Usuário do sistema responsável pela aplicação
app_user: "deploy"

# Configuração da aplicação (host/porta/url)
app_name: "api"
app_entrypoint: "dist/index.js"
app_host: "localhost"
app_port: 5000
app_url: "http://{{ app_host }}:{{ app_port }}"

# Estrutura de diretórios
repo_dir: "/opt/project"                  # diretório raiz onde o repositório será clonado
service_name: "service"               # nome do serviço dentro do repo
app_dir: "{{ repo_dir }}/{{ service_name }}"  # diretório da aplicação

# Repositório Git da aplicação
repo_url: "https://github.com/username/repository.git"
repo_branch: "main"
repo_version: null
repo_commit: null
repo_ref: "{{ repo_commit | default(repo_version, true) | default(repo_branch, true) }}"

# Configuração do Node.js
node_version: "18"                    # versão a instalar (via NodeSource)

# Arquivo de variáveis de ambiente (NÃO versionar com segredos)
env_file: ".env"

# Configuração do MongoDB
mongodb_uri: "mongodb+srv://<user>:<pass>@<cluster>.mongodb.net/?retryWrites=true&w=majority"
mongodb_db: "app_db"
mongodb_collection_imoveis: "collection"

# Configuração API
master_key: "INSIRA_UMA_STRING_LONGA_E_ALEATORIA_EX:openssl_rand_base64"
api_key_cache_ttl_ms: 600000   # 10 minutos
api_key_neg_ttl_ms: 30000      # 30 segundos 
